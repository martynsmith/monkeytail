	dh_installdebconf
	dh_compress
	dh_fixperms
	dh_installman

	dh_installdeb

	dh_installdirs
	dh_install

	dh_link

	dh_compress

	dh_gencontrol
	dh_md5sums

	dh_builddeb

.PHONY: build clean binary

